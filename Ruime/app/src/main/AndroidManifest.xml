<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsdev.ruime"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jsdev.ruime.MainActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PlayerActivity"
            android:label="@string/demo"
            android:icon="@drawable/ic_demo_launcher"
            android:theme="@android:style/android:Theme.Holo.NoActionBar.Fullscreen"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name="com.jsdev.ruime.DialogActivity"
            android:label="@string/app_name"
            android:theme="@style/Translucent"
            android:clearTaskOnLaunch="true" />

        <activity
            android:name="com.jsdev.ruime.CodeGenerator"
            android:label="@string/app_name" />

        <receiver android:name=".receiver.UnlockScreenReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <receiver
            android:process=":remote"
            android:name="com.jsdev.ruime.services.GameAlarm" />
    </application>

</manifest>
